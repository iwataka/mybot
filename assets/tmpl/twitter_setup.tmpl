{{define "twitter_setup"}}
<!DOCTYPE html>
<html lang="en">
{{template "header" .}}
<body>
    <div class="container">
        {{template "navbar" .}}
        <div class="jumbotron">
            <h1>Twitter Setup</h1>
            <h2 class="lead">This is the first step to use Mybot</h2>
            <form id="setup" action="/setup/twitter/" method="post" enctype="multipart/form-data"></form>
            <input form="setup" type="submit" value="Save" class="btn btn-primary btn-lg">
        </div>
        {{if .Message}}
        <div class="alert alert-danger">{{.Message}}</div>
        {{end}}
        <div class="alert alert-info">
            <a href="https://apps.twitter.com" target="_blank">To create/check your own Twitter application go to here</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <td>Consumer Key</td>
                        <td>
                            <input form="setup" type="password" name="twitter_setup.consumer_key" value="{{.ConsumerKey}}">
                        </td>
                    </tr>
                    <tr>
                        <td>Consumer Secret</td>
                        <td>
                            <input form="setup" type="password" name="twitter_setup.consumer_secret" value="{{.ConsumerSecret}}">
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
{{end}}
