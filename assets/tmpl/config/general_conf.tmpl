{{{define "notification_conf"}}}
    <tr>
        <td rowspan="3">{{{.Title}}}</td>
        <td>twitter myself</td>
        <td>
            {{{checkbox .Data.TwitterAllowSelf (printf "%s%s" .NamePrefix ".twitter_allow_self")}}}
        </td>
    </tr>
    <tr>
        <td>twitter other users</td>
        <td>
            {{{listTextbox .Data.TwitterUsers  (printf "%s%s" .NamePrefix ".twitter_users") "typeahead-tagsinput"}}}
        </td>
    </tr>
    <tr>
        <td>slack channels</td>
        <td>
            {{{listTextbox .Data.SlackChannels  (printf "%s%s" .NamePrefix ".slack_channels") ""}}}
        </td>
    </tr>
{{{end}}}

{{{define "general_conf"}}}
<div class="table-responsive">
    <table class="table">
        <tbody>
            {{{template "notification_conf" (newMap "Title" "Twitter Place Notification" "Data" .Twitter.Notification.Place "NamePrefix" "twitter.notification.place")}}}
            <tr>
                <td colspan="2">Polling Duration</td>
                <td>
                    <input class="form-control" form="overwrite" type="text" name="duration" value="{{{.Duration}}}">
                </td>
            </tr>
        </tbody>
    </table>
</div>
{{{end}}}
